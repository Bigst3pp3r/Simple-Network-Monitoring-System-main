{
    "configurations": [
      {
        "type": "debugpy",
        "request": "launch",
        "name": "Launch Program",
        "program": "${workspaceFolder}/${input:programPath}"
      }
    ],
    "inputs": [
      {
        "type": "pickString",
        "id": "programPath",
        "description": "Select the Python file to debug",
        "options": [
          "src/main.py",
          "src/filters.py",
          "src/logging_setup.py",
          "src/packet_processing.py",
          "src/traffic_summary.py",
          "src/utils.py"
        ]
      }
    ]
  }